{
  "name": "microshop",
  "private": true,
  "workspaces": [
    "gateway",
    "services/user",
    "services/tuition",
    "services/payment"
  ],
  "type": "module",
  "scripts": {
    "dev:gateway": "npm --workspace gateway run dev",
    "dev:user": "npm --workspace services/user run dev",
    "dev:tuition": "npm --workspace services/tuition run dev",
    "dev:payment": "npm --workspace services/payment run dev",

    "start:gateway": "npm --workspace gateway run start",
    "start:user": "npm --workspace services/user run start",
    "start:tuition": "npm --workspace services/tuition run start",
    "start:payment": "npm --workspace services/payment run start",

    "dev:all": "concurrently -n gateway,user,tuition,payment -c green,blue,magenta,yellow \"npm run dev:gateway\" \"npm run dev:user\" \"npm run dev:tuition\" \"npm run dev:payment\""
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.1.0"
  }
}
